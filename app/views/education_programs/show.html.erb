<div class="well gray-centered-wrapper">
  <h2>Подробная информация о расписании</h2>
  
  <p>
    <strong>Курс:</strong>
    <%= @education_program.course %>
  </p>
  
  <p>
    <strong>Уровень:</strong>
    <%= EducationLevel.find(@education_program.educationLevel_id).name %>
  </p>
  
  <p>
    <strong>Форма:</strong>
    <%= EducationForm.find(@education_program.educationForm_id).name %>
  </p>
  
  <p>
    <strong>Направление/специальность:</strong>
    <%= @education_program.name %>
  </p>
  
  <%= link_to 'Редактировать', edit_education_program_path(@education_program), :class => 'btn btn-primary' %>
  <%= link_to 'Вернуться к списку', education_programs_path, :class => 'btn btn-link' %>
</div>
