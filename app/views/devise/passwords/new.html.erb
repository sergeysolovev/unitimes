<div class="well auth-forms-wrapper">
  <h2>Забыли пароль?</h2>

  <%= simple_form_for(resource, :as => resource_name, :url => password_path(resource_name), :html => { :method => :post, :class => 'form-vertical' }) do |f| %>
    <%= f.error_notification %>
    <%= display_base_errors resource %>
    <div class="form-group">
    <%= f.input :email, :autofocus => true %>
    </div>
    <div class="form-group">
    <%= f.button :submit, 'Выслать инструкции по восстановлению пароля', :class => 'btn-primary' %>
    </div>
  <% end %>
  <%= render "devise/shared/links" %>
</div>