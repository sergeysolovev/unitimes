<div class="auth-forms-links">
  <%- if controller_name != 'sessions' %>
  <span>
    <%= link_to "Вход", new_session_path(resource_name) %>
  </span>
  <% end -%>
  
  <%- if devise_mapping.registerable? && controller_name != 'registrations' %>
  <span>
    <%= link_to "Регистрация", new_registration_path(resource_name) %>
  </span>
  <% end -%>
  
  <%- if devise_mapping.recoverable? && controller_name != 'passwords' %>
  <span>
    <%= link_to "Забыли пароль?", new_password_path(resource_name) %>
  </span>
  <% end -%>
  
  <%- if devise_mapping.confirmable? && controller_name != 'confirmations' %>
  <span>
    <%= link_to "Не получили инструкций для подтверждения?", new_confirmation_path(resource_name) %>
  </span>
  <% end -%>
  
  <%- if devise_mapping.lockable? && resource_class.unlock_strategy_enabled?(:email) && controller_name != 'unlocks' %>
  <span>
    <%= link_to "Не получили инструкция для разблокировки?", new_unlock_path(resource_name) %>
  </span>
  <% end -%>
  
  <%- if devise_mapping.omniauthable? %>
    <%- resource_class.omniauth_providers.each do |provider| %>
    <span>
      <%= link_to "Войти с помощью #{provider.to_s.titleize}", omniauth_authorize_path(resource_name, provider) %>
    </span>
    <% end -%>
  <% end -%>
</div>
