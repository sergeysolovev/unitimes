<div class="well auth-forms-wrapper">
  <h2>Вход</h2>
  <%= simple_form_for(resource, :as => resource_name, :url => session_path(resource_name), :html => {:class => 'form-vertical' }) do |f| %>
    <div class="form-group">
    <%= f.input :email, :autofocus => true, :class => 'form-control' %>
    </div>
    <div class="form-group">
    <%= f.input :password %>
    </div>
    <div class="form-group">
      <div class="checkbox">
        <label>
          <%= f.input :remember_me, :wrapper => :none, :as => :boolean, :label => false, :boolean_style => :inline, :html => { :class => nil } if devise_mapping.rememberable? %>
          Запомнить меня
        </label>
      </div>
    </div>
    <div class="form-group">
    <%= f.button :submit, "Войти", :class => 'btn btn-primary' %>
    </div>
  <% end %>
  <%= render "devise/shared/links" %>
</div>